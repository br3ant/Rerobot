<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/corner_transparent">

    <LinearLayout
        android:background="@drawable/shape_dialog_title"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置区域名称"
            android:textColor="#00C3FF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-DIALOG-"
            android:textColor="#00a5d7"
            android:textSize="8dp" />

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_gradient"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/missionName" />

        <EditText
            android:gravity="center"
            android:textColorHint="#d2d2d2"
            android:hint="请输入区域名称"
            android:layout_marginTop="6dp"
            android:background="@drawable/style_edittext_ip"
            android:maxLength="20"
            android:id="@+id/createMissionName"
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:inputType="text" />

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="#00C3FF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#00C3FF"
                android:text="★"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="#00C3FF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#484848"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_selector_dont_save"
                android:id="@+id/missionCreateCancel"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text="@string/dialogCancel" />

            <Button
                android:textColor="#484848"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/btn_selector_save_setting"
                android:id="@+id/missionCreateSubmit"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/dialogConfirm" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>