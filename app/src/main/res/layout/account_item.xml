<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/drop_list_delete"
            android:id="@+id/drop_list_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="SandyLuo@hadlsjfjsjkfjsjfsjfjlkfjlksakfjinks.com"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#616161"
            android:textSize="36sp" />

        <View
            android:id="@+id/drop_list_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8" />

        <Button
            android:id="@+id/drop_list_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/delete_icon" />

    </RelativeLayout>

</RelativeLayout>