<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_xiaodu">
    <com.bayi.rerobot.utilView.MyBatterView
        android:id="@+id/MyBatterView"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        app:mCapWidth="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:showText="true"
        app:batteryTextSize="20sp"/>
    <ImageView  android:id="@+id/lighting"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@+id/MyBatterView"
        android:src="@mipmap/lighting"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView  android:id="@+id/text_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintRight_toLeftOf="@+id/lighting"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消毒机器人"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView  android:id="@+id/icon_robot"
        android:layout_width="68dp"
        android:layout_height="146dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_robot"
        android:layout_marginTop="72dp"/>
    <ImageView  android:id="@+id/icon_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/newtask_close"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
       />
    <TextView  android:id="@+id/txt_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择模式"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_robot"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="104dp"
        />
    <RadioGroup
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mode"
        android:layout_marginTop="20dp"
        android:id="@+id/main_radiogroup"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp">

        <RadioButton
            android:id="@+id/main_radiobutton_penwu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/penwu_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
           />
        <RadioButton
            android:id="@+id/main_radiobutton_ziwaideng"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"

            android:layout_marginRight="80dp"
            android:background="@drawable/ziwaideng_selector"/>
        <RadioButton
            android:id="@+id/main_radiobutton_chongdian"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"
            android:layout_marginRight="80dp"
            android:background="@drawable/chongdian_selector"/>
        <RadioButton
            android:id="@+id/main_radiobutton_zhushui"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/zhushui_selector"/>
    </RadioGroup>
    <TextView  android:id="@+id/txt_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="循环次数"
        android:textColor="#fffffefe"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/main_radiogroup"
        android:layout_marginTop="28dp"
        android:textSize="24sp"
        />
    <RadioGroup
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_num"
        android:layout_marginTop="20dp"
        android:id="@+id/main_radiogroup_num"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        >
        <RadioButton
            android:id="@+id/main_radiobutton_num1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:text="1"
            android:textSize="36sp"
            android:layout_marginRight="80dp"
            android:textColor="@drawable/num_text_selected"
            android:background="@drawable/num_selected"/>
        <RadioButton
            android:id="@+id/main_radiobutton_num3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"
            android:text="3"
            android:textSize="36sp"
            android:layout_marginRight="80dp"
            android:textColor="@drawable/num_text_selected"
            android:background="@drawable/num_selected"/>
        <RadioButton
            android:id="@+id/main_radiobutton_num5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"
            android:text="5"
            android:textSize="36sp"
            android:layout_marginRight="80dp"
            android:textColor="@drawable/num_text_selected"
            android:background="@drawable/num_selected"/>
        <RadioButton
            android:id="@+id/main_radiobutton_num10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:button="@null"
            android:text="10"
            android:textSize="36sp"
            android:textColor="@drawable/num_text_selected"
            android:background="@drawable/num_selected"/>
    </RadioGroup>
    <TextView  android:id="@+id/txt_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/main_radiogroup_num"
        android:layout_marginTop="28dp"
        android:text="选择区域 (不选为全部)"
        android:textColor="#fffffefe"
        android:textSize="24sp"
        />
    <RelativeLayout  android:id="@+id/re"
        app:layout_constraintTop_toBottomOf="@+id/txt_area"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="main_radiogroup_num,txt_num,re,txt_area" />
    <Button  android:id="@+id/btn_startTask"
        android:layout_width="210dp"
        android:layout_height="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toLeftOf="@+id/btn_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="140dp"
        android:background="@drawable/area_click"
        android:text="开始执行"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#4E48BCFF"/>
    <Button  android:id="@+id/btn_stop"
    android:layout_width="210dp"
    android:layout_height="68dp"
    app:layout_constraintLeft_toRightOf="@+id/btn_startTask"
    android:layout_marginBottom="140dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/area_click"
    android:text="停止"
    android:gravity="center"
    android:textSize="30sp"
    android:textColor="#4E48BCFF"/>

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:visibility="gone"
        android:layout_marginBottom="50dp"
        >

    <Button  android:id="@+id/btn_pause"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/area_click"
        android:text="暂停"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#4E48BCFF"/>
    <Button  android:id="@+id/btn_restart"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/area_click"
        android:text="恢复"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#4E48BCFF"/>
    </LinearLayout>
 <View  android:id="@+id/view_timer"
      android:layout_width="120dp"
      android:layout_height="80dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/view_other"
      android:background="@drawable/button_bg"
      />
    <View android:id="@+id/view_other"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@+id/view_timer"
        app:layout_constraintRight_toLeftOf="@+id/view_log"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"/>
    <View android:id="@+id/view_log"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@+id/view_other"
        app:layout_constraintRight_toLeftOf="@+id/view_more"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"/>
    <View android:id="@+id/view_more"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@+id/view_log"
        android:background="@drawable/button_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_timer"
        app:layout_constraintRight_toRightOf="@+id/view_timer"
        app:layout_constraintTop_toTopOf="@+id/view_timer"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_timing"/>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_other"
        app:layout_constraintRight_toRightOf="@+id/view_other"
        app:layout_constraintTop_toTopOf="@+id/view_other"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_pattern"/>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_log"
        app:layout_constraintRight_toRightOf="@+id/view_log"
        app:layout_constraintTop_toTopOf="@+id/view_log"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_site"/>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_more"
        app:layout_constraintRight_toRightOf="@+id/view_more"
        app:layout_constraintTop_toTopOf="@+id/view_more"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_more"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_timer"
        app:layout_constraintRight_toRightOf="@+id/view_timer"
        app:layout_constraintBottom_toBottomOf="@+id/view_timer"
        android:text="定时任务"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_other"
        app:layout_constraintRight_toRightOf="@+id/view_other"
        app:layout_constraintBottom_toBottomOf="@+id/view_other"
        android:text="设置检测"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_log"
        app:layout_constraintRight_toRightOf="@+id/view_log"
        app:layout_constraintBottom_toBottomOf="@+id/view_log"
        android:text="日志"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_more"
        app:layout_constraintRight_toRightOf="@+id/view_more"
        app:layout_constraintBottom_toBottomOf="@+id/view_more"
        android:text="更多"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout >
