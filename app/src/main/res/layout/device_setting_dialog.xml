<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_xiaodu">

  <Button android:id="@+id/checkupdate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="22dp"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@null"
      android:text="检查更新"
      android:textSize="24sp"
      android:layout_marginLeft="18dp"
      android:textColor="@color/colorWhite"
      app:layout_constraintLeft_toLeftOf="parent"
      android:elevation="1dp"/>
  <TextView app:layout_constraintLeft_toRightOf="@+id/checkupdate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/vercode_name"
      android:textSize="12sp"
      android:layout_marginLeft="5dp"
      android:textColor="@color/colorWhite"
      android:layout_marginBottom="5dp"
      app:layout_constraintBottom_toBottomOf="@+id/checkupdate"/>
    <TextView android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="设备检测"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        />
    <ImageView  android:id="@+id/icon_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/newtask_close"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"/>
  <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@color/colorWhite"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="72dp"/>
    <TextView  app:layout_constraintLeft_toLeftOf="parent"
         android:text="设备状态"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="18dp"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintBottom_toTopOf="@+id/start_device"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/device_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>>
    <Button android:id="@+id/start_device"
        android:layout_width="430dp"
        android:layout_height="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        android:background="@drawable/area_click"
        android:text="开始检测"
        android:textColor="#4E48BC"
        android:textSize="30sp"/>
    <View  android:id="@+id/view_it"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_bg"

        />
    <View  android:id="@+id/view_iot"
        android:layout_width="120dp"
        android:layout_height="80dp"

        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_bg"
        />

    <View  android:id="@+id/view_area"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_bg"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_it"
        app:layout_constraintRight_toRightOf="@+id/view_it"
        app:layout_constraintTop_toTopOf="@+id/view_it"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_network"/>
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_iot"
        app:layout_constraintRight_toRightOf="@+id/view_iot"
        app:layout_constraintTop_toTopOf="@+id/view_iot"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_environment_1"/>

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_area"
        app:layout_constraintRight_toRightOf="@+id/view_area"
        app:layout_constraintTop_toTopOf="@+id/view_area"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_site"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_it"
        app:layout_constraintRight_toRightOf="@+id/view_it"
        app:layout_constraintBottom_toBottomOf="@+id/view_it"
        android:text="互联网"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_iot"
        app:layout_constraintRight_toRightOf="@+id/view_iot"
        app:layout_constraintBottom_toBottomOf="@+id/view_iot"
        android:text="物联网"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/view_area"
        app:layout_constraintRight_toRightOf="@+id/view_area"
        app:layout_constraintBottom_toBottomOf="@+id/view_area"
        android:text="站点设置"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
