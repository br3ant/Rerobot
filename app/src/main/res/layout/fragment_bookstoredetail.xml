<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<include layout="@layout/title"/>
  <View android:id="@+id/view_background"
      android:layout_width="0dp"
      android:layout_height="1000dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="42dp"
      android:layout_marginRight="42dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="105dp"
      android:background="#ff1c1f33"/>
 <ImageView android:id="@+id/img"
     android:layout_width="200dp"
     android:layout_height="240dp"
     android:src="@mipmap/no_cover"
     app:layout_constraintLeft_toLeftOf="@+id/view_background"
     app:layout_constraintTop_toTopOf="@id/view_background"/>
<TextView android:id="@+id/txt_call_no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:text="图书号:"
    android:textColor="#fff"
    app:layout_constraintTop_toTopOf="@+id/img"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="20dp"
    app:layout_constraintLeft_toRightOf="@id/img"/>
    <TextView android:id="@+id/txt_qr_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="图书条形码:"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/txt_call_no"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/img"/>
    <TextView android:id="@+id/txt_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="馆藏地:"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/txt_qr_no"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/img"/>
    <TextView android:id="@+id/txt_land_borrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="借还时间:"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/txt_place"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/img"/>
</androidx.constraintlayout.widget.ConstraintLayout>
