<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF323060">
  <TextView  android:id="@+id/ymd"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:gravity="center|top"
      android:textSize="36sp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="18dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="10dp"
      android:textColor="@color/colorWhite"
      android:visibility="gone"
      />
    <TextView  android:id="@+id/hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toBottomOf="@+id/ymd"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="6dp"/>
  <View android:id="@+id/view_top"
      android:layout_width="1dp"
      android:layout_height="6dp"
      app:layout_constraintLeft_toLeftOf="@+id/txt"
      app:layout_constraintRight_toRightOf="@+id/txt"
      app:layout_constraintBottom_toTopOf="@+id/txt"
      android:background="#9B99AE"/>
    <TextView  android:id="@+id/txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="102dp"
        app:layout_constraintTop_toBottomOf="@+id/ymd"
        android:background="@drawable/item_fragment_log"
        android:layout_marginTop="6dp"/>
    <View android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="134dp"
        app:layout_constraintTop_toBottomOf="@+id/ymd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/view_shape_25dp"
        />
  <View  android:id="@+id/view"
      android:layout_width="1dp"
      android:layout_height="80dp"
      app:layout_constraintLeft_toLeftOf="@+id/txt"
      app:layout_constraintRight_toRightOf="@+id/txt"
      app:layout_constraintTop_toBottomOf="@+id/txt"
      android:background="#9B99AE"/>
  <TextView android:id="@+id/msg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="30sp"
      android:textColor="#FF3B3B3B"
      app:layout_constraintLeft_toLeftOf="@+id/background"
      app:layout_constraintTop_toTopOf="@+id/background"
      app:layout_constraintBottom_toBottomOf="@+id/background"
      android:layout_marginLeft="42dp"
     />
</androidx.constraintlayout.widget.ConstraintLayout>
