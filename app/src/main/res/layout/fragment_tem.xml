<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
>
  <include layout="@layout/title"/>


<View android:layout_width="0dp"
    android:layout_height="350dp"
    android:layout_marginLeft="58dp"
    android:layout_marginRight="58dp"
    android:id="@+id/top_view"
    android:layout_marginTop="94dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#272A3D"/>
<de.hdodenhof.circleimageview.CircleImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_image"
    android:layout_width="250dp"
    android:layout_height="250dp"
    app:layout_constraintLeft_toLeftOf="@+id/top_view"
    app:layout_constraintTop_toTopOf="@+id/top_view"
    app:layout_constraintBottom_toBottomOf="@+id/top_view"
    app:civ_border_width="2dp"
    android:layout_marginLeft="40dp"
    app:civ_border_color="#FF000000"/>
<TextView  android:id="@+id/main_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="陌生人"
    android:textColor="#fff"
    android:textSize="46sp"
    app:layout_constraintLeft_toRightOf="@+id/profile_image"
    app:layout_constraintTop_toTopOf="@+id/profile_image"
    android:layout_marginLeft="42dp"
    android:layout_marginTop="22dp"/>
<TextView android:id="@+id/main_tem"
    android:layout_width="200dp"
    android:layout_height="70dp"
    app:layout_constraintLeft_toRightOf="@+id/profile_image"
    android:layout_marginLeft="42dp"
    android:layout_marginTop="28dp"
    app:layout_constraintTop_toBottomOf="@+id/main_name"
    android:background="@drawable/cewen_tem"
    android:gravity="center"
    android:textSize="46sp"
    android:textColor="#fff"
    />
<TextView
    android:id="@+id/main_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@+id/profile_image"
    android:layout_marginLeft="42dp"
    app:layout_constraintTop_toBottomOf="@+id/main_tem"
    android:layout_marginTop="18dp"
    android:textSize="30sp"
    android:textColor="#fff"/>
  <TextView
      android:id="@+id/tid"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@+id/profile_image"
      android:layout_marginLeft="42dp"
      app:layout_constraintTop_toBottomOf="@+id/main_time"
      android:layout_marginTop="8dp"
      android:textSize="30sp"
      android:textColor="#fff"/>
<View android:id="@+id/middle_view"
    android:layout_width="0dp"
    android:layout_height="320dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/top_view"
    android:layout_marginTop="20dp"
    android:background="#272A3D"
    android:layout_marginLeft="58dp"
    android:layout_marginRight="58dp"/>
<TextView android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="最近通行人员"
    android:textColor="#ffffffff"
    android:textSize="35sp"
    app:layout_constraintLeft_toLeftOf="@+id/middle_view"
    app:layout_constraintTop_toTopOf="@+id/middle_view"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="46dp"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="240dp"
    android:id="@+id/recycle1"
    app:layout_constraintLeft_toLeftOf="@+id/middle_view"
    app:layout_constraintRight_toRightOf="@+id/middle_view"
    app:layout_constraintTop_toBottomOf="@+id/text"/>
<View
    android:id="@+id/bottom_view"
    android:layout_width="0dp"
    android:layout_height="320dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/middle_view"
    android:layout_marginTop="20dp"
    android:background="#272A3D"
    android:layout_marginLeft="58dp"
    android:layout_marginRight="58dp"/>
<TextView android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="今日报警"
    android:textColor="#ffffffff"
    android:textSize="35sp"
    app:layout_constraintLeft_toLeftOf="@+id/bottom_view"
    app:layout_constraintTop_toTopOf="@+id/bottom_view"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="46dp"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="240dp"
    android:id="@+id/recycle2"
    app:layout_constraintLeft_toLeftOf="@+id/bottom_view"
    app:layout_constraintRight_toRightOf="@+id/bottom_view"
    app:layout_constraintTop_toBottomOf="@+id/text1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
