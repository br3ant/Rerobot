<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<include layout="@layout/title"/>
  <View android:id="@+id/view_background"
      android:layout_width="0dp"
      android:layout_height="1000dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="42dp"
      android:layout_marginRight="42dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="105dp"
      android:background="#ff1c1f33"/>
  <ImageView android:id="@+id/img_book"
      android:layout_width="0dp"
      android:layout_height="152dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintRight_toRightOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background"
      android:src="@mipmap/bookstore"
      android:scaleType="fitXY"
      android:visibility="gone"/>
  <TextView
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background"
      android:layout_marginLeft="42dp"
      android:layout_marginTop="40dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="图书查询"
      android:textColor="#ffffffff"
      android:textSize="36sp"
      android:visibility="gone"
      />
  <TextView
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background"
      android:layout_marginLeft="42dp"
      android:layout_marginTop="98dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="多样化查询，“益”查到底“"
      android:textColor="#ffffffff"
      android:textSize="26sp"
      android:visibility="gone"
      />

  <EditText android:id="@+id/edit_search"
      android:layout_width="0dp"
      android:layout_height="92dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="74dp"
      android:layout_marginRight="74dp"
      android:textSize="34sp"
      android:textColor="#fff"
      app:layout_constraintTop_toBottomOf="@+id/img_book"
      android:layout_marginTop="32dp"
      android:background="@drawable/dangan_edittext"
      android:singleLine="true"
      android:paddingRight="200dp"
      android:paddingLeft="10dp"/>
  <Button  android:id="@+id/btn_search"
      android:layout_width="190dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="@+id/edit_search"
      app:layout_constraintBottom_toBottomOf="@+id/edit_search"
      android:background="@drawable/dangan_button"
      app:layout_constraintRight_toRightOf="@+id/edit_search"
      android:text="查询"
      android:textColor="#ffffffff"
      android:textSize="34sp"
      />
  <TextView android:id="@+id/t1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="时间简史"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      android:layout_marginLeft="74dp"
      app:layout_constraintTop_toBottomOf="@+id/edit_search"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toLeftOf="@+id/t2"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>
  <TextView android:id="@+id/t2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="邓小平理论"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintLeft_toRightOf="@+id/t1"
      app:layout_constraintTop_toBottomOf="@+id/edit_search"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toLeftOf="@+id/t3"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>
  <TextView android:id="@+id/t3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="安徒生童话"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      app:layout_constraintLeft_toRightOf="@+id/t2"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintTop_toBottomOf="@+id/edit_search"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toRightOf="@+id/view_background"
      android:layout_marginRight="74dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      />
  <TextView android:id="@+id/t4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="市场营销"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      android:layout_marginLeft="74dp"
      app:layout_constraintTop_toBottomOf="@+id/t1"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toLeftOf="@+id/t5"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>
  <TextView android:id="@+id/t5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="高等数数"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintLeft_toRightOf="@+id/t1"
      app:layout_constraintTop_toBottomOf="@+id/t1"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toLeftOf="@+id/t6"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>
  <TextView android:id="@+id/t6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="历史文书"
      android:textColor="#80ffffff"
      android:textSize="30sp"
      app:layout_constraintLeft_toRightOf="@+id/t5"
      android:background="@drawable/dangan_edittext"
      app:layout_constraintTop_toBottomOf="@+id/t1"
      android:layout_marginTop="32dp"
      app:layout_constraintRight_toRightOf="@+id/view_background"
      android:layout_marginRight="74dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
