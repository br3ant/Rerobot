<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff">
    <ImageView android:id="@+id/img_back"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="14dp" 
        android:background="@drawable/icon_return"/>
    <ImageView  android:id="@+id/img_main"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/img_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/icon_home"
        android:visibility="gone"/>
<View android:id="@+id/view_main"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="0dp"
    android:layout_height="504dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/monitor_bg"
    android:layout_marginTop="78dp"/>
    <TextView  app:layout_constraintTop_toTopOf="@+id/view_main"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text_temp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/view_main"
        app:layout_constraintRight_toRightOf="@+id/view_main"
        android:textSize="100sp"/>
    <TextView android:id="@+id/text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_temp"
        app:layout_constraintLeft_toLeftOf="@id/view_main"
        app:layout_constraintRight_toRightOf="@+id/view_main"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="室内环境"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_main"
        app:layout_constraintTop_toTopOf="@+id/view_main"/>
    <View android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/text_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView  android:id="@+id/text_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/view_line"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/view_line"
        android:layout_marginRight="30dp"/>
    <TextView  android:id="@+id/text_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/view_line"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/view_line"
        android:layout_marginLeft="30dp"/>

    <TextView  android:id="@+id/txt_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/view_line"
        android:textColor="#ffffff"
        android:text="今日最高"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_high"/>
    <TextView  android:id="@+id/txt_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="今日最低"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/view_line"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/text_low"/>
    <View  android:id="@+id/view_tem"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_main"
        android:background="@drawable/temperature_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"/>
    <View  android:id="@+id/view_co2"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_tem"
        android:background="@drawable/co2_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"/>
    <View  android:id="@+id/view_vvoc"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_co2"
        android:background="@drawable/formaldehyde_bg"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        />
    <View  android:id="@+id/view_hum"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_main"
        android:background="@drawable/humidity_bg"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"/>
    <View  android:id="@+id/view_pm25"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_hum"
        android:background="@drawable/pm25_bg"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"/>
    <View  android:id="@+id/view_pm10"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pm25"
        android:background="@drawable/tvoc_bg"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"/>
    <TextView
        style="@style/style_top"
        android:text="温度"
        app:layout_constraintLeft_toLeftOf="@+id/view_tem"
        app:layout_constraintTop_toTopOf="@+id/view_tem"
        />
    <TextView
        style="@style/style_top"
        android:text="湿度"
        app:layout_constraintLeft_toLeftOf="@+id/view_hum"
        app:layout_constraintTop_toTopOf="@+id/view_hum"
        />
    <TextView
        style="@style/style_top"
        android:text="CO2"
        app:layout_constraintLeft_toLeftOf="@+id/view_co2"
        app:layout_constraintTop_toTopOf="@+id/view_co2"
        />
    <TextView
        style="@style/style_top"
        android:text="PM2.5"
        app:layout_constraintLeft_toLeftOf="@+id/view_pm25"
        app:layout_constraintTop_toTopOf="@+id/view_pm25"
        />
    <TextView
        style="@style/style_top"
        android:text="甲醛"
        app:layout_constraintLeft_toLeftOf="@+id/view_vvoc"
        app:layout_constraintTop_toTopOf="@+id/view_vvoc"
        />
    <TextView
        style="@style/style_top"
        android:text="PM10"
        app:layout_constraintLeft_toLeftOf="@+id/view_pm10"
        app:layout_constraintTop_toTopOf="@+id/view_pm10"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_tem"
        app:layout_constraintLeft_toLeftOf="@+id/view_tem"
        app:layout_constraintTop_toTopOf="@+id/view_tem"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_hum"
        app:layout_constraintLeft_toLeftOf="@+id/view_hum"
        app:layout_constraintTop_toTopOf="@+id/view_hum"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_co2"
        app:layout_constraintLeft_toLeftOf="@+id/view_co2"
        app:layout_constraintTop_toTopOf="@+id/view_co2"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_pm25"
        app:layout_constraintLeft_toLeftOf="@+id/view_pm25"
        app:layout_constraintTop_toTopOf="@+id/view_pm25"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_vvoc"
        app:layout_constraintLeft_toLeftOf="@+id/view_vvoc"
        app:layout_constraintTop_toTopOf="@+id/view_vvoc"
        />
    <TextView
        style="@style/style_data"
        android:id="@+id/text_pm10"
        app:layout_constraintLeft_toLeftOf="@+id/view_pm10"
        app:layout_constraintTop_toTopOf="@+id/view_pm10"
        />
    <TextView
        style="@style/style_unit"
        android:text="℃"
        app:layout_constraintLeft_toRightOf="@+id/text_tem"
        app:layout_constraintBottom_toBottomOf="@+id/text_tem"
        />
    <TextView
        style="@style/style_unit"
        android:text="RH"
        app:layout_constraintLeft_toRightOf="@+id/text_hum"
        app:layout_constraintBottom_toBottomOf="@+id/text_hum"
        />
    <TextView
        style="@style/style_unit"
        android:text="mg/l"
        app:layout_constraintLeft_toRightOf="@+id/text_co2"
        app:layout_constraintBottom_toBottomOf="@+id/text_co2"
        />
    <TextView
        style="@style/style_unit"
        android:text="ug/m3"
        app:layout_constraintLeft_toRightOf="@+id/text_pm25"
        app:layout_constraintBottom_toBottomOf="@+id/text_pm25"
        />
    <TextView
        style="@style/style_unit"
        android:text="mg/m3"
        app:layout_constraintLeft_toRightOf="@+id/text_vvoc"
        app:layout_constraintBottom_toBottomOf="@+id/text_vvoc"
        />
    <TextView
        style="@style/style_unit"
        android:text="ug/m3"
        app:layout_constraintLeft_toRightOf="@+id/text_pm10"
        app:layout_constraintBottom_toBottomOf="@+id/text_pm10"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
