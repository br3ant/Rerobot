<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF1C1F33">
  <ImageView
      android:layout_width="36dp"
      android:layout_height="36dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="18dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="40dp"
      android:src="@mipmap/back"
      android:id="@+id/back"/>
    <TextView  android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="档案牵引"
        android:textColor="#ffffffff"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"/>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl1"

      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="2dp">
    <View android:id="@+id/top_view"
        android:layout_width="0dp"
        android:layout_height="170dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/dangan_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="档案查询"
        android:textColor="#ffffffff"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="@+id/top_view"
        app:layout_constraintTop_toTopOf="@+id/top_view"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="38dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说档案名，“益”查到底"
        android:textColor="#ccffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/top_view"
        android:layout_marginLeft="42dp"
        app:layout_constraintTop_toTopOf="@+id/top_view"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="128dp"
        android:src="@drawable/dangan_ss"
        app:layout_constraintRight_toRightOf="@+id/top_view"
        app:layout_constraintBottom_toBottomOf="@+id/top_view"
        android:layout_marginRight="50dp"/>
    <EditText android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="74dp"
        android:textSize="34sp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/top_view"
        android:layout_marginTop="32dp"
        android:background="@drawable/dangan_edittext"
        android:singleLine="true"
        android:paddingRight="200dp"
        android:paddingLeft="10dp"/>
      <Button  android:id="@+id/btn_search"
        android:layout_width="190dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/edit_search"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search"
        android:background="@drawable/dangan_button"
        app:layout_constraintRight_toRightOf="@+id/edit_search"
         android:text="搜索"
         android:textColor="#ffffffff"
         android:textSize="34sp"
        />
    <TextView android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="毛泽东思想"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="74dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/t2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <TextView android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邓小平理论"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/t3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <TextView android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人事档案"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/t2"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="74dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />
    <TextView android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="市场营销档案"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="74dp"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/t5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <TextView android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文书档案"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/t6"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
    <TextView android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科技档案"
        android:textColor="#80ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/t5"
        android:background="@drawable/dangan_edittext"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="74dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />
      </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl2"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="2dp">
    <TextView android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="暂无数据"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"/>
    <androidx.recyclerview.widget.RecyclerView
      android:layout_height="0dp"
      android:layout_width="0dp"
        android:id="@+id/recycle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="#FF323446"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/chat_view"
        android:layout_width="0dp"
        android:layout_height="700dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/dangan_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-40dp"
        android:visibility="gone">
      <View
          android:layout_width="52dp"
          android:layout_height="6dp"
          android:background="#80f4f4f4"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="10dp"/>
      <LinearLayout android:id="@+id/lin"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="26dp"
          android:gravity="center"
          >
        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ce_answer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好，小益很高兴为您服务"
            android:textColor="#ffffffff"
            android:textSize="26sp"
            />
      </LinearLayout>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/aiView"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/lin"
          app:layout_constraintBottom_toBottomOf="parent"
          android:padding="10dp"
          android:layout_marginTop="30dp"

          />
    </androidx.constraintlayout.widget.ConstraintLayout>

     </androidx.constraintlayout.widget.ConstraintLayout>
