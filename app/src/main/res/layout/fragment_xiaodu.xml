<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <include layout="@layout/title" />

  <View
      android:id="@+id/view_background"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="218dp"
      android:layout_marginLeft="42dp"
      android:layout_marginTop="105dp"
      android:layout_marginRight="42dp"
      android:background="#272A3D"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/img_book"
      android:layout_width="0dp"
      android:layout_height="230dp"
      android:scaleType="fitXY"
      android:src="@mipmap/bookstore"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintRight_toRightOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="57dp"
      android:layout_marginTop="60dp"
      android:text="智能消毒"
      android:textColor="#ffffffff"
      android:textSize="52sp"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="57dp"
      android:layout_marginTop="145dp"
      android:text="消毒杀菌，“益”说搞定"
      android:textColor="#ffffffff"
      android:textSize="40sp"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      app:layout_constraintTop_toTopOf="@+id/view_background" />

  <TextView
      android:id="@+id/txt_mode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="115dp"
      android:layout_marginTop="58dp"
      android:text="选择模式"
      android:textColor="#ffffffff"
      android:textSize="35sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/img_book" />

  <RadioGroup
      android:id="@+id/main_radiogroup"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:layout_marginLeft="115dp"
      android:layout_marginTop="43dp"
      android:layout_marginRight="55dp"
      android:orientation="horizontal"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_mode">

    <RadioButton
        android:id="@+id/main_radiobutton_penwu"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/xiaodu_selector"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:text="区域消毒"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <RadioButton
        android:id="@+id/main_radiobutton_dianwei"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/xiaodu_selector"
        android:button="@null"
        android:gravity="center"
        android:text="点位消毒"
        android:textColor="#ffffff"
        android:textSize="40sp"/>

    <RadioButton
        android:id="@+id/main_radiobutton_xunluo"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/xiaodu_selector"
        android:button="@null"
        android:gravity="center"
        android:text="区域巡逻"
        android:textColor="#ffffff"
        android:textSize="40sp"/>

  </RadioGroup>
  <TextView  android:id="@+id/txt_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="循环次数"
      android:textColor="#fffffefe"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="115dp"
      app:layout_constraintTop_toBottomOf="@id/main_radiogroup"
      android:layout_marginTop="58dp"
      android:textSize="35sp"
      />
  <RadioGroup
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/rdset"
      app:layout_constraintTop_toBottomOf="@+id/txt_num"
      android:layout_marginTop="20dp"
      android:id="@+id/main_radiogroup_num"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:orientation="horizontal"
      android:layout_marginLeft="115dp"
      android:layout_marginRight="5dp"
      >
    <RadioButton
        android:id="@+id/main_radiobutton_num1"
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:checked="true"
        android:button="@null"
        android:text="1"
        android:textSize="40sp"
        android:layout_marginRight="30dp"
        android:background="@drawable/xiaodu_selector"
        android:textColor="#ffffff"/>
    <RadioButton
        android:id="@+id/main_radiobutton_num5"
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:button="@null"
        android:text="5"
        android:textSize="40sp"
        android:background="@drawable/xiaodu_selector"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        />
    <RadioButton
        android:id="@+id/main_radiobutton_num10"
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:button="@null"
        android:text="10"

        android:layout_marginRight="30dp"
        android:textSize="40sp"
        android:background="@drawable/xiaodu_selector"
        android:textColor="#ffffff"/>
    <RadioButton
        android:id="@+id/main_radiobutton_num0"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:button="@null"
        android:text="自定义"
        android:layout_marginRight="30dp"
        android:textSize="40sp"
        android:background="@drawable/xiaodu_selector"
        android:textColor="#ffffff"/>
  </RadioGroup>
  <Button android:id="@+id/rdset"
      android:layout_width="100dp"
      android:text="设置"
      android:textSize="40sp"
      android:layout_height="100dp"
      android:textColor="#ffffff"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_num"
      android:layout_marginRight="60dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/xiaodu_selected"/>
  <TextView  android:id="@+id/txt_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="115dp"
      app:layout_constraintTop_toBottomOf="@+id/main_radiogroup_num"
      android:layout_marginTop="58dp"
      android:text="选择区域"
      android:textColor="#fffffefe"
      android:textSize="35sp"
      />
  <RelativeLayout  android:id="@+id/re"
      app:layout_constraintTop_toBottomOf="@+id/txt_area"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="250dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_height="0dp"
      android:layout_width="0dp"
      android:layout_marginLeft="115dp"

      android:layout_marginRight="115dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="10dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  </RelativeLayout>
  <Button  android:id="@+id/btn_startTask"
      android:layout_width="450dp"
      android:layout_height="126dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/btn_stop"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="500dp"
      android:layout_marginLeft="115dp"
      android:background="@drawable/area_click"
      android:text="确定"
      android:gravity="center"
      android:textSize="46sp"
      android:textColor="#ffffff"/>
  <Button  android:id="@+id/btn_stop"
      android:layout_width="450dp"
      android:layout_height="126dp"
     app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/btn_startTask"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="500dp"
      android:layout_marginRight="115dp"

      android:background="@drawable/area_click"
      android:text="停止"
      android:gravity="center"
      android:textSize="46sp"
      android:textColor="#ffffff"/>
  <View  android:id="@+id/view_timer"
      android:layout_width="120dp"
      android:layout_height="240dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_background"
      android:layout_marginBottom="210dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/view_chongdian"
      android:background="@drawable/button_bg"
      />
  <View android:id="@+id/view_chongdian"
      android:layout_width="120dp"
      android:layout_height="240dp"
      app:layout_constraintLeft_toRightOf="@+id/view_timer"
      app:layout_constraintRight_toLeftOf="@+id/view_water"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="210dp"
      android:background="@drawable/button_bg"/>
  <View android:id="@+id/view_water"
      android:layout_width="120dp"
      android:layout_height="240dp"
      app:layout_constraintLeft_toRightOf="@+id/view_chongdian"
      app:layout_constraintRight_toLeftOf="@+id/view_more"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="210dp"
      android:background="@drawable/button_bg"/>
  <View android:id="@+id/view_more"
      android:layout_width="120dp"
      android:layout_height="240dp"
      app:layout_constraintLeft_toRightOf="@+id/view_water"
      android:background="@drawable/button_bg"
      app:layout_constraintRight_toRightOf="@+id/view_background"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="210dp"
      />
  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_timer"
      app:layout_constraintRight_toRightOf="@+id/view_timer"
      app:layout_constraintTop_toTopOf="@+id/view_timer"
      android:layout_marginTop="50dp"
      android:src="@drawable/icon_timing"/>
  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_chongdian"
      app:layout_constraintRight_toRightOf="@+id/view_chongdian"
      app:layout_constraintTop_toTopOf="@+id/view_chongdian"
      android:layout_marginTop="50dp"
      android:src="@drawable/icon_pattern"/>
  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_water"
      app:layout_constraintRight_toRightOf="@+id/view_water"
      app:layout_constraintTop_toTopOf="@+id/view_water"
      android:layout_marginTop="50dp"
      android:src="@drawable/icon_site"/>
  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:layout_constraintLeft_toLeftOf="@+id/view_more"
      app:layout_constraintRight_toRightOf="@+id/view_more"
      app:layout_constraintTop_toTopOf="@+id/view_more"
      android:layout_marginTop="50dp"
      android:src="@drawable/icon_more"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/view_timer"
      app:layout_constraintRight_toRightOf="@+id/view_timer"
      app:layout_constraintBottom_toBottomOf="@+id/view_timer"
      android:text="定时任务"
      android:textColor="@color/colorWhite"
      android:textSize="35sp"
      android:layout_marginBottom="58dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/view_chongdian"
      app:layout_constraintRight_toRightOf="@+id/view_chongdian"
      app:layout_constraintBottom_toBottomOf="@+id/view_chongdian"
      android:text="回充"
      android:textColor="@color/colorWhite"
      android:textSize="35sp"
      android:layout_marginBottom="58dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/view_water"
      app:layout_constraintRight_toRightOf="@+id/view_water"
      app:layout_constraintBottom_toBottomOf="@+id/view_water"
      android:text="注水"
      android:textColor="@color/colorWhite"
      android:textSize="35sp"
      android:layout_marginBottom="58dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="@+id/view_more"
      app:layout_constraintRight_toRightOf="@+id/view_more"
      app:layout_constraintBottom_toBottomOf="@+id/view_more"
      android:text="更多"
      android:textColor="@color/colorWhite"
      android:textSize="35sp"
      android:layout_marginBottom="58dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
