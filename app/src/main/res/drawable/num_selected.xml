<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--触摸状态时颜色-->
    <item android:drawable="@drawable/num_click" android:state_checked="true" />
    <!--点击状态是颜色-->
    <item android:drawable="@drawable/num_click" android:state_pressed="true" />
    <item android:drawable="@drawable/num_click" android:state_selected="true" />
    <!--默认颜色-->
    <item android:drawable="@drawable/num_normal" />
</selector>